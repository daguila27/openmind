<!doctype html>
<html>
<head>
    <link rel="shortcut icon" href="assets/img/belitaicon.png">
    <title><%=page_title%></title>
    <link rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css"><!-- load bootstrap css -->
    <link rel="stylesheet" media="screen" href="/assets/fonts/font-awesome/font-awesome.min.css"><!-- load fontawesome -->
    <!-- jQuery Load -->
    <script src="/assets/js/jquery-3.1.1.min.js"></script>
    <script src="/assets/js/jquery-1.11.3.min.js"></script>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    
</head>
<body>
<div class="container">

<div class="col-sm-6 col-sm-offset-3">

    <h1><span class="fa fa-sign-in"></span>Cambiar contraseña</h1>
    <!-- Bootstrap core CSS -->
    <link href="/assets/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/bootstrap-datetimepicker.min.css" >
    <link href="/assets/css/font-awesome.min.css" rel="stylesheet">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Arimo" rel="stylesheet">
    

    <link href="/assets/css/style_admin_login.css" rel="stylesheet">

    <!-- show any messages that come back with authentication -->

    <!-- LOGIN FORM -->
    <form action="/cambiar_contrasena" method="post" class="change">
        <div class="form-group">
            <label>Ingrese su contraseña actual:</label>
            <input type="password" class="form-control" name="contraActual" id="contraActual">
        </div>
        <hr>
        <div class="form-group">
            <label>Ingrese nueva contraseña:</label>
            <input type="password" class="form-control" name="newPass" id="newPass">
        </div>
        <div class="form-group">
            <label>Confirme su nueva contraseña:</label>
            <input type="password" class="form-control" name="repeatPass" id="repeatPass">
        </div>
        <div><label class="confirmacion" style="color: green; font-size: 25px"></label></div>
    </form>
        <button id="submit" type="submit" class="btn btn-warning btn-lg" style="background-color: rgb(186, 221, 15)">Cambiar contraseña</button>
    <hr>

    

    
</div>

</div>
<script type="text/javascript">
    $('#repeatPass').on('keyup', function(e){
            e.preventDefault();
            if($('#repeatPass').val() == $('#newPass').val()){
                $('.confirmacion').html("Confirmacion correcta.");
            }
            else{
                $('.confirmacion').html("Contraseñas no coinciden.");
            }    
    });    
    $('#submit').on('click', function(e){
        e.preventDefault();
        if($('#repeatPass').val() != $('#newPass').val()){
            alert('Confirmacion de contraseña incorrecta');
        }
        else{
            $('.change').submit();
        }
    });
</script>
</body>
</html>