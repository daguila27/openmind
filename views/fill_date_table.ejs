<div style="display: flex; width: 50%; margin-bottom: 20px">
<div>
    <input id="date" type="date" class="form-control" placeholder="Ingrese Fecha">
</div>
  <input  class="btn btn-primary" type="button" value="Buscar" id="buttonDate">
</div>
<div class="container_info">
  
</div>

<script type="text/javascript">
  $('#buttonDate').on('click', function(e){
      e.preventDefault();
      $.ajax({
        type: 'POST',
        data: {'fecha': $('#date').val()},
        url: '/table_saleDate',
        success: function(data){
          $('.container_info').html(data);
        }
      });
  });
</script>