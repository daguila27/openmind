<div class="container_method"></div>
<script type="text/javascript">
  $.ajax({
          type: 'GET',
          url:'/import_product',
          success: function(data){
            $('.container_method').html(data);
          }
      });
  $("#accion_button").on('click', function(e){
        e.preventDefault();
        if($("select").val() == "Importar"){
          $.ajax({
              type: 'GET',
              url:'/import_product',
              success: function(data){
                $('.container_method').html(data);
              }
          });
        }
        else if($("select").val() == "Exportar"){
          $.ajax({
              type: 'GET',
              url: '/export_product',
              success: function(data){
                $('.container_method').html(data);
              }
          });
        }
  });   
</script>
